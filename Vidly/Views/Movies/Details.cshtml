@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @(Model.ReleaseDate.HasValue?Model.ReleaseDate.Value.ToShortDateString():"?")</li>
    <li>Added Date: @(Model.DateAdded.HasValue?Model.DateAdded.Value.ToShortDateString():"?")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

